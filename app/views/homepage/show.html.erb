<%= stylesheet_link_tag "homepage" %>

<% unless @user %>
    <h1><%= @user.id %></h1>
    <h2><%= @user.name %></h2>
    <div>
        <% @statuses.friends_timeline.statuses.each do |status| %>
            <% status.text %>
            <% if status.bmiddle_pic %>
                <% image_tag status.bmiddle_pic %>
            <% end %>
        <% end %>
    </div>
<% else %>
    <div class="homepage">
      <a class="authorizeUrl" href="<%= @client.authorize_url %>">
        <%= image_tag 'click.gif', :class => "click" %>
      </a>
    </div>
<% end %>
